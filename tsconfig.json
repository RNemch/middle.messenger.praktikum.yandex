{
  "include": ["src", "vite-plugin-pug-precompile.ts", "vite.config.ts"],
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES6",
    "module": "ES6",
    "allowJs": true,
    "moduleResolution": "Node",
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  }
}
