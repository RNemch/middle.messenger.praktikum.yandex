{
  "include": [
    "src",
    "vite-plugin-pug-precompile.ts",
    "vite.config.ts",
    "server.js"
  ],
  "exclude": ["./dist"],
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES6",
    "module": "ES6",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  }
}
