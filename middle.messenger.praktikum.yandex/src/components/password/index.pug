mixin password(id, placeholder, name)
  block head
    link(rel="stylesheet", href="/src/components/password/styles.less")
  block content
    .password
      input(id=id, type="password", placeholder=placeholder, name=name)
      button.password-control(type="button", data-target=`#${id}`)
        img#eye(src="/image/visibility.svg", alt="") 
